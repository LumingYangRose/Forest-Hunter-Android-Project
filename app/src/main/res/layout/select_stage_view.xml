<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/select_stage_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_title_image"
    android:orientation="vertical"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/setting_title"
            android:layout_width="match_parent"
            android:layout_height="108dp"
            android:gravity="center"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/select_stage_font" />


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@drawable/crocodile_static" />

        <ImageButton
            android:id="@+id/select_stage1_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#2DC53B"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/crazy_crocodile_select_stage"
            android:text="1st music"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/space"
            android:layout_width="match_parent"
            android:layout_height="32dp" />


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:srcCompat="@drawable/lion_static" />

        <ImageButton
            android:id="@+id/select_stage2_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#FF5722"
            android:gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/mad_lion_text"
            android:text="2nd music"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/space1"
            android:layout_width="match_parent"
            android:layout_height="29dp" />


        <Button
            android:id="@+id/select_stage_confirm_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#FFC107"
            android:text="Confirm"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/select_stage_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#FFC107"
            android:text="CANCEL"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </LinearLayout>
</ScrollView>