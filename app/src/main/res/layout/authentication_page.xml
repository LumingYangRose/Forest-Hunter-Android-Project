<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@drawable/pic_title_image"
    tools:ignore="ExtraText">

    <Button
        android:id="@+id/exit_button"
        android:layout_width="159dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.8"
        android:backgroundTint="#00E676"
        android:text="Exit"
        android:textColor="#2C2626"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/main_menu_title"
        android:layout_width="470dp"
        android:layout_height="102dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.278"
        app:srcCompat="@drawable/pic_main_menu_title" />

    <Button
        android:id="@+id/signup_button"
        android:layout_width="159dp"
        android:layout_height="56dp"
        android:layout_marginBottom="96dp"
        android:alpha="0.8"
        android:backgroundTint="#00E676"
        android:text="Sign up"
        android:textColor="#2C2626"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="159dp"
        android:layout_height="56dp"
        android:layout_marginBottom="96dp"
        android:alpha="0.8"
        android:backgroundTint="#00E676"
        android:text="Login"
        android:textColor="#2C2626"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/change_bgm_button"
        android:layout_width="64dp"
        android:layout_height="58dp"
        android:background="@null"
        android:contentDescription="button for change bgm"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.976"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045"
        app:srcCompat="@drawable/music_selection_logo" />

    />

</androidx.constraintlayout.widget.ConstraintLayout>