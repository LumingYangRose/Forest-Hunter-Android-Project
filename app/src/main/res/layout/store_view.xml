<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/store_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/pic_title_image"
    tools:layout_editor_absoluteX="26dp"
    tools:layout_editor_absoluteY="0dp">

    <ImageView
        android:id="@+id/store_board_view"
        android:layout_width="552dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="23dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/pic_character_board" />

    <ImageView
        android:id="@+id/forest_store"
        android:layout_width="309dp"
        android:layout_height="52dp"
        android:layout_alignStart="@+id/store_board_view"
        android:layout_alignTop="@+id/store_board_view"
        android:layout_alignEnd="@+id/store_board_view"
        android:layout_marginStart="136dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="107dp"
        android:background="@drawable/forest_store_title"
        android:textColor="#151414"
        android:textSize="30sp"
        tools:layout_editor_absoluteY="62dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_500"
        android:layout_width="374dp"
        android:layout_height="41dp"
        android:layout_below="@+id/forest_store"
        android:layout_alignEnd="@+id/store_board_view"
        android:layout_marginStart="20dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="37dp"
        android:layout_toEndOf="@+id/imageView3"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coin_10k"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dancingscript"
            android:text="1000  GOLD  COINS"
            android:textColor="#FBC02D"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/recharge_10k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#FBC02D"
            android:text="1.99$"
            android:textColor="#2C2626"
            android:textSize="14sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_1000"
        android:layout_width="374dp"
        android:layout_height="41dp"
        android:layout_below="@+id/ll_500"
        android:layout_alignEnd="@+id/store_board_view"
        android:layout_marginStart="20dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="41dp"
        android:layout_toEndOf="@+id/imageView4"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coin_60000"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dancingscript"
            android:text="6000  GOLD  COINS"
            android:textColor="#FBC02D"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/recharge_60k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#FBC02D"
            android:text="9.99$"
            android:textColor="#2C2626"
            android:textSize="16sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="429dp"
        android:layout_height="44dp"
        android:layout_below="@+id/ll_1000"
        android:layout_alignEnd="@+id/store_board_view"
        android:layout_alignBottom="@+id/store_board_view"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="42dp"
        android:layout_toEndOf="@+id/imageView5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coin_250k"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dancingscript"
            android:text="15000  GOLD  COINS"
            android:textColor="#FBC02D"
            android:textSize="16sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/recharge_250k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#FBC02D"
            android:text="19.99$"
            android:textColor="#000000"
            android:textSize="16sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageButton
        android:id="@+id/return_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:layout_alignTop="@+id/store_board_view"
        android:layout_alignBottom="@+id/store_board_view"
        android:layout_marginStart="40dp"
        android:layout_marginTop="278dp"
        android:layout_marginBottom="24dp"
        android:layout_toEndOf="@+id/store_board_view"
        android:background="@null"
        android:scaleType="fitCenter"
        android:scaleX="-1"
        app:srcCompat="@drawable/pic_next_button" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/store_board_view"
        android:layout_alignTop="@+id/store_board_view"
        android:layout_marginStart="41dp"
        android:layout_marginTop="121dp"
        app:srcCompat="@drawable/coin1" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="58dp"
        android:layout_height="62dp"
        android:layout_alignStart="@+id/store_board_view"
        android:layout_alignTop="@+id/store_board_view"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="43dp"
        android:layout_marginTop="186dp"
        android:layout_marginBottom="143dp"
        app:srcCompat="@drawable/coin2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/store_board_view"
        android:layout_alignTop="@+id/store_board_view"
        android:layout_alignBottom="@+id/store_board_view"
        android:layout_marginStart="41dp"
        android:layout_marginTop="266dp"
        android:layout_marginBottom="41dp"
        app:srcCompat="@drawable/coin3" />

    <TextView
        android:id="@+id/coins"
        android:layout_width="360dp"
        android:layout_height="27dp"
        android:layout_below="@+id/forest_store"
        android:layout_alignBottom="@+id/store_board_view"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="191dp"
        android:layout_toEndOf="@+id/imageView3"
        android:text="Your Coins:"
        android:textColor="#FBC02D"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/coins2"
        android:layout_width="48dp"
        android:layout_height="32dp"
        android:layout_alignStart="@+id/imageView3"
        android:layout_alignTop="@+id/store_board_view"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_marginStart="33dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="-1dp"
        android:layout_marginBottom="70dp"
        android:layout_toStartOf="@+id/coins"
        android:background="@drawable/one_coin"
        android:textColor="#FBC02D"
        android:textSize="14sp"
        android:textStyle="bold|italic" />

</RelativeLayout>