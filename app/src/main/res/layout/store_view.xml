<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/store_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_title_image"
    tools:layout_editor_absoluteX="26dp"
    tools:layout_editor_absoluteY="0dp">

    <ImageView
        android:id="@+id/store_board_view"
        android:layout_width="483dp"
        android:layout_height="403dp"
        android:layout_centerInParent="true"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/pic_character_board" />

    <ImageView
        android:id="@+id/forest_store"
        android:layout_width="270dp"
        android:layout_height="56dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/forest_store_title"
        android:textColor="#151414"
        android:textSize="30sp"
        tools:layout_editor_absoluteY="62dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forest_store"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coin_500"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="500 gold COINS"
            android:textColor="#151414"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/recharge_500"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#00E676"
            android:text="Recharge"
            android:textColor="#2C2626"
            android:textSize="18sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_500"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coin_1000"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="1000 gold COINS"
            android:textColor="#151414"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/recharge_1000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#00E676"
            android:text="Recharge"
            android:textColor="#2C2626"
            android:textSize="18sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_1000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coin_2000"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="2000 gold COINS"
            android:textColor="#151414"
            android:textSize="30sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/recharge_2000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#00E676"
            android:text="Recharge"
            android:textColor="#2C2626"
            android:textSize="18sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageButton
        android:id="@+id/return_main_activity"
        android:layout_width="78dp"
        android:layout_height="78dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="59dp"
        android:layout_marginTop="307dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="8dp"
        android:layout_toEndOf="@+id/store_board_view"
        android:background="@null"
        android:scaleX="-1"
        app:srcCompat="@drawable/pic_next_button" />

</RelativeLayout>