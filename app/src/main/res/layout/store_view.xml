<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/store_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/pic_title_image"
    tools:layout_editor_absoluteX="26dp"
    tools:layout_editor_absoluteY="0dp">

    <ImageView
        android:id="@+id/store_board_view"
        android:layout_width="552dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="21dp"
        android:layout_marginBottom="15dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/pic_character_board" />

    <ImageView
        android:id="@+id/forest_store"
        android:layout_width="309dp"
        android:layout_height="52dp"
        android:layout_alignStart="@+id/store_board_view"
        android:layout_alignTop="@+id/store_board_view"
        android:layout_alignEnd="@+id/store_board_view"
        android:layout_marginStart="136dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="107dp"
        android:background="@drawable/forest_store_title"
        android:textColor="#151414"
        android:textSize="30sp"
        tools:layout_editor_absoluteY="62dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_500"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/forest_store"
        android:layout_alignEnd="@+id/store_board_view"
        android:layout_marginStart="20dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="33dp"
        android:layout_toEndOf="@+id/imageView3"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coin_10k"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dancingscript"
            android:text="1000  GOLD  COINS"
            android:textColor="#FBC02D"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/recharge_10k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#FBC02D"
            android:text="1.99$"
            android:textColor="#2C2626"
            android:textSize="18sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_1000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_500"
        android:layout_alignEnd="@+id/store_board_view"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="27dp"
        android:layout_toEndOf="@+id/imageView4"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coin_60000"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dancingscript"
            android:text="6000  GOLD  COINS"
            android:textColor="#FBC02D"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/recharge_60k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#FBC02D"
            android:text="9.99$"
            android:textColor="#2C2626"
            android:textSize="18sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="401dp"
        android:layout_height="55dp"
        android:layout_below="@+id/ll_1000"
        android:layout_alignEnd="@+id/store_board_view"
        android:layout_alignBottom="@+id/store_board_view"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="35dp"
        android:layout_toEndOf="@+id/imageView5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/coin_250k"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/dancingscript"
            android:text="25000  GOLD  COINS"
            android:textColor="#FBC02D"
            android:textSize="24sp"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/recharge_250k"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:backgroundTint="#FBC02D"
            android:text="19.99$"
            android:textColor="#000000"
            android:textSize="18sp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <ImageButton
        android:id="@+id/return_main_activity"
        android:layout_width="65dp"
        android:layout_height="63dp"
        android:layout_alignTop="@+id/ll_1000"
        android:layout_alignBottom="@+id/store_board_view"
        android:layout_marginStart="30dp"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="16dp"
        android:layout_toEndOf="@+id/store_board_view"
        android:background="@null"
        android:scaleType="fitXY"
        android:scaleX="-1"
        app:srcCompat="@drawable/pic_next_button" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="82dp"
        android:layout_height="65dp"
        android:layout_alignStart="@+id/store_board_view"
        android:layout_alignTop="@+id/store_board_view"
        android:layout_marginStart="39dp"
        android:layout_marginTop="108dp"
        app:srcCompat="@drawable/coin1" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_alignStart="@+id/store_board_view"
        android:layout_alignTop="@+id/store_board_view"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="189dp"
        android:layout_marginBottom="119dp"
        app:srcCompat="@drawable/coin2" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="78dp"
        android:layout_height="51dp"
        android:layout_alignStart="@+id/store_board_view"
        android:layout_alignTop="@+id/store_board_view"
        android:layout_alignBottom="@+id/store_board_view"
        android:layout_marginStart="38dp"
        android:layout_marginTop="272dp"
        android:layout_marginBottom="34dp"
        app:srcCompat="@drawable/coin3" />

    <TextView
        android:id="@+id/coins"
        android:layout_width="311dp"
        android:layout_height="35dp"
        android:layout_below="@+id/forest_store"
        android:layout_alignBottom="@+id/store_board_view"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="299dp"
        android:layout_marginBottom="251dp"
        android:layout_toEndOf="@+id/imageView5"
        android:text="Your Coins:"
        android:textColor="#FBC02D"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/coins2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@+id/forest_store"
        android:layout_alignEnd="@+id/coins"
        android:layout_alignBottom="@+id/store_board_view"
        android:layout_marginStart="-9dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="314dp"
        android:layout_marginBottom="255dp"
        android:layout_toEndOf="@+id/imageView3"
        android:background="@drawable/one_coin"
        android:textColor="#FBC02D"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

</RelativeLayout>