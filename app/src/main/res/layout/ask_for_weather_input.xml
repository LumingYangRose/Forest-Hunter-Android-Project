<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding = "15dp"
    android:background="@android:color/white"
    >

    <TextView
        android:id="@+id/enter_city_name_title"
        android:text ="Please Enter City Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="City Name"
        android:layout_marginTop="10dp"
        android:id="@+id/enter_city_name_input_box"
        />
    <TextView
        android:id="@+id/enter_zip_code_title"
        android:text ="\nOr you can Enter Zip Code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Zip code"
        android:layout_marginTop="10dp"
        android:id="@+id/enter_zipcode_box"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:id="@+id/weather_input_cancel_button"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="Confirm"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:id="@+id/weather_input_confirm_button"/>

</LinearLayout>