<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scoreboard_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_title_image"
    android:orientation="vertical"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/score_board_title_img" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/score_board_itemcard" />

        <Button
            android:id="@+id/change_stage_scoreboard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#EE8B26"
            android:text=""
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/scoreboard_confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#EE8B26"
            android:text="Got it!"
            android:textColor="@color/white"
            android:textSize="14sp" />


    </LinearLayout>
</ScrollView>