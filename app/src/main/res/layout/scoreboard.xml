<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scoreboard_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic_title_image"
    android:orientation="vertical"
    android:padding="14dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/score_board_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:srcCompat="@drawable/score_board_title_img" />

        <ImageView
            android:id="@+id/stage_name"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/top_1_player"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/score_board_card"
            android:gravity="center"
            android:text="1st"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/top_2_player"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/score_board_card"
            android:gravity="center"
            android:text="2nd"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/top_3_player"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/score_board_card"
            android:gravity="center"
            android:text="3rd"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/top_4_player"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/score_board_card"
            android:gravity="center"
            android:text="4st"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/top_5_player"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/score_board_card"
            android:gravity="center"
            android:text="5nd"
            android:textSize="22sp" />


        <Button
            android:id="@+id/change_stage_scoreboard"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#EE8B26"
            android:fontFamily="@font/dancingscript"
            android:text=""
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:id="@+id/scoreboard_confirm_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:backgroundTint="#EE8B26"
            android:fontFamily="@font/dancingscript"
            android:text="Got it!"
            android:textColor="@color/white"
            android:textSize="20sp" />


    </LinearLayout>
</ScrollView>