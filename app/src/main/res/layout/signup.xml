<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signup_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="14dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signup_enter_username_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please Enter Username"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/signup_enter_username_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="username"
            android:inputType="text"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/signup_enter_password_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nPlease Enter Password"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/signup_enter_password_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="8 - 16 characters password"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/signup_confirm_password_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nPlease Confirm Password"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/signup_confirm_password_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Type password again"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/signup_enter_security_question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nEnter Security Question"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/signup_enter_security_question_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Type Security Question"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/signup_enter_security_answer_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nEnter Answer to the Security Question Above"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/signup_enter_security_answer_input_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Type Answer to the Security Question"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="16sp" />

        <Button
            android:id="@+id/login_confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00E676"
            android:text="CONFIRM"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/login_cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#00E676"
            android:text="CANCEL"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>
</ScrollView>